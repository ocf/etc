{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://ocf.berkeley.edu/schemas/hours.schema.json",
  "definitions": {
    "date": {
      "type": "string",
      "comment": "Further validation of date objects is done by ocflib"
    },
    "daterange": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/date"
        },
        {
          "$ref": "#/definitions/date"
        }
      ]
    },
    "holiday": {
      "type": "object",
      "properties": {
        "date": {
          "oneOf": [
            {
              "$ref": "#/definitions/date"
            },
            {
              "$ref": "#/definitions/daterange"
            }
          ]
        },
        "hours": {
          "$ref": "#/definitions/timeranges"
        },
        "reason": {
          "type": "string"
        }
      },
      "required": [
        "date",
        "reason"
      ],
      "additionalProperties": false
    },
    "time": {
      "type": "string",
      "pattern": "^[012]?[0-9]:[0-9][0-9]$"
    },
    "timerange": {
      "type": "array",
      "items": [
        {
          "$ref": "#/definitions/time"
        },
        {
          "$ref": "#/definitions/time"
        }
      ]
    },
    "timeranges": {
      "type": ["array", "null"],
      "items": {
        "$ref": "#/definitions/timerange"
      }
    }
  },
  "type": "object",
  "properties": {
    "holidays": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/holiday"
      }
    },
    "regular": {
      "type": "object",
      "properties": {
        "Monday": {
          "$ref": "#/definitions/timeranges"
        },
        "Tuesday": {
          "$ref": "#/definitions/timeranges"
        },
        "Wednesday": {
          "$ref": "#/definitions/timeranges"
        },
        "Thursday": {
          "$ref": "#/definitions/timeranges"
        },
        "Friday": {
          "$ref": "#/definitions/timeranges"
        },
        "Saturday": {
          "$ref": "#/definitions/timeranges"
        },
        "Sunday": {
          "$ref": "#/definitions/timeranges"
        }
      },
      "required": [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "regular",
    "holidays"
  ],
  "additionalProperties": false
}
